<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E"
        android:id="@+id/E"
        android:layout_marginTop="60dp"
        android:textSize="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="elemento"
        android:id="@+id/elemento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="56dp"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N° A."
        android:id="@+id/Natomico"
        android:layout_marginTop="-5dp"
        android:layout_alignTop="@+id/E"
        android:layout_toRightOf="@+id/E"
        android:layout_toEndOf="@+id/E"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="elettronegatività"
        android:id="@+id/elettronegativita"
        android:layout_below="@+id/oss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="1dp"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="massa atomica"
        android:id="@+id/massa"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/E"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="punto di fusione"
        android:id="@+id/pto_fusione"
        android:layout_below="@+id/elettronegativita"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="1dp"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="stato di ossidazione"
        android:id="@+id/oss"
        android:layout_below="@+id/massa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="1dp"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="punto di ebollizione"
        android:id="@+id/pto_ebollizione"
        android:layout_below="@+id/pto_fusione"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="1dp"
        android:textColor="#1A3138"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="anno di scoperta"
        android:id="@+id/scoperta"
        android:layout_below="@+id/pto_ebollizione"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="1dp"
        android:textColor="#1A3138"/>

</RelativeLayout>